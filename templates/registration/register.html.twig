{% block stylesheets %}
  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="{{asset('plugins/fontawesome-free/css/all.min.css')}}">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="{{asset('plugins/icheck-bootstrap/icheck-bootstrap.min.css')}}">
  <!-- Theme style -->
  <link rel="stylesheet" href="{{asset('dist/css/adminlte.min.css')}}">

{% endblock %}

{% block body %}
    
    <body class="hold-transition register-page">
<div class="register-box">
  <div class="card card-outline card-primary">
    <div class="card-header text-center">
      <a href="#" class="h1"><b>Ma Ville</b>En Poche</a>
    </div>
    <div class="card-body">
      <p class="login-box-msg">Cr√©er Un Noveau Compte</p>

 {{ form_start(registrationForm) }}
      <div class="input-group mb-3">
          {{ form_widget(registrationForm.nom,{'attr':{"class":"form-control datetimepicker-input" , "placeholder":"Nom"}}) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          {{ form_widget(registrationForm.prenom) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-user"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          {{ form_widget(registrationForm.email) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-envelope"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          {{ form_widget(registrationForm.plainPassword.first,{'attr':{"class":"form-control datetimepicker-input" , "placeholder":"Mot de Passe"}}, {
            label: 'Password'
        }) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          {{ form_widget(registrationForm.plainPassword.second,{'attr':{"class":"form-control datetimepicker-input" , "placeholder":"Mot de Passe"}}, {
            label: 'Password'
        }) }}
          <div class="input-group-append">
            <div class="input-group-text">
              <span class="fas fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
              <div class="icheck-primary">
                {{ form_widget(registrationForm.agreeTerms, {'id':'remember'} ) }}    
         
              <label for="remember">
               Remember
              </label>
              </div>
          </div>
        
   
       
   

        <button type="submit" class="btn btn-primary btn-block">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}

{% block javascripts %}
<!-- jQuery -->
<script src="{{asset('plugins/jquery/jquery.min.js')}}"></script>
<!-- Bootstrap 4 -->
<script src="{{asset('plugins/bootstrap/js/bootstrap.bundle.min.js')}}"></script>
<!-- AdminLTE App -->
<script src="{{asset('dist/js/adminlte.min.js')}}"></script>
{% endblock %}