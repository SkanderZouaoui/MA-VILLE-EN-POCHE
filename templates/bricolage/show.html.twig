{% block body %}
    <div class="card-body">
          <div class="row">
            <div class="col-12 col-sm-6">
              <h3 class="d-inline-block d-sm-none">{{ bricolage.nom }}</h3>
              <div class="col-12">
                <img src="{{ asset('upload/photo/'~bricolage.image) }}" class="product-image" alt="Product Image">
              </div>
              
            </div>
            <div class="col-12 col-sm-6">
              <h3 class="my-3">{{ bricolage.nom }}</h3>
              <p>{{ bricolage.description }}</p>

              <hr>
              
             <h4></h4>
              <div class="col-12 col-sm-6">       
                    <a  class="btn btn-primary" href="{{ path('bricolage_edit', {'id': bricolage.id}) }}">Edit</a>
                     <a class="btn btn-success" href="{{ path('bricolage_index') }}">Back to list</a>
                     <hr>
                    {{ include('bricolage/_delete_form.html.twig') }}
                   
                  </div>

            </div>
           
          </div>
         
        <!-- /.card-body -->
  
{% endblock %}
