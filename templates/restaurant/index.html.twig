{% block body %}
 <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              
              
              <!-- /.card-body -->
            </div>
            <!-- /.card -->

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Gestion Restaurants</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
             <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Description</th>
                <th>Localisation</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Nommenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.nom }}</td>
                <td> <img src="{{ asset('upload/photo/'~restaurant.image) }} "  height="100px" width="100px"></td>
                <td>{{ restaurant.description }}</td>
                <td>{{ restaurant.localisation }}</td>
                <td>{{ restaurant.latitude }}</td>
                <td>{{ restaurant.longitude }}</td>
                <td>{{ restaurant.nommenu }}</td>
                <td>
                   <a class="btn btn-info" href="{{ path('restaurant_show', {'id': restaurant.id}) }}">Show</a>
                    <a class="btn btn-warning"  href="{{ path('restaurant_edit', {'id': restaurant.id}) }}">Edit</a>
                      <hr>
                     {{ include('restaurant/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
                 
                </table>
              </div>
               <a class="btn btn-success" href="{{ path('restaurant_new') }}">Create </a>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->  
  

   
