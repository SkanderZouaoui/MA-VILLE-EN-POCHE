{% extends 'base.html.twig' %}

{% block title %}Destination index{% endblock %}

{% block body %}
    <h1>Destination index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Description</th>
                <th>Localisation</th>
                <th>Note</th>
                <th>Avis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td>{{ destination.nom }}</td>
                <td>{{ destination.image }}</td>
                <td>{{ destination.description }}</td>
                <td>{{ destination.localisation }}</td>
                <td>{{ destination.note }}</td>
                <td>{{ destination.avis }}</td>
                <td>
                    <a href="{{ path('destination_show', {'id': destination.id}) }}">show</a>
                    <a href="{{ path('destination_edit', {'id': destination.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('destination_new') }}">Create new</a>
{% endblock %}
